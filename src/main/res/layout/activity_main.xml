<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <com.example.garderob.Token
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/token1"


        android:layout_marginLeft="20dp"
        android:layout_marginTop="360dp" />
    <com.example.garderob.Token
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="360dp"
        android:id = "@+id/token2"/>
    <com.example.garderob.Token
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="360dp"
        android:id = "@+id/token3"/>
    <com.example.garderob.Token
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="360dp"
        android:id = "@+id/token4"/>



    <ImageView
        android:id="@+id/ImgDrop"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/hanger">
    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/tolik"
        android:id="@+id/imageView">
        </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nike"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Проебанo: "
        android:id="@+id/textView"
        android:typeface="serif"

        android:layout_below="@+id/ImgDrop"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="58dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Время: "
        android:id="@+id/textView2"
        android:typeface="serif"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/ImgDrop"
        android:layout_alignStart="@+id/ImgDrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Осталось: "
        android:id="@+id/textView3"

        android:typeface="serif"

        android:layout_alignTop="@+id/textView2"
        android:layout_alignRight="@+id/ImgDrop"
        android:layout_alignEnd="@+id/ImgDrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5"
        android:id="@+id/textViewTolik"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5"
        android:id="@+id/textViewNike"
        android:layout_alignTop="@+id/textViewTolik"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />


</RelativeLayout>